extends ../../../master-dashboard

block content
	style.
		td {
		cursor: pointer;
		}
	script(type='text/javascript').
		document.getElementsByClassName('mdl-navigation__link menuselectify')[0].classList.remove('menuselectify')
		document.getElementById('project-allotment-prof-create').classList.add('menuselectify')
	div.mdl-cell.mdl-cell--12-col
		h3(style='text-align:center') Project Allotment
		p(style='text-align:center') Click on a project to view / delete it.
	div.mdl-cell.mdl-cell--12-col
	div.mdl-cell.mdl-cell--12-col
		center
			button.mdl-button.mdl-js-button.mdl-js-ripple-effect(onclick='window.location.replace("#{rootURL}/project-allotment-prof-create/create")') Create a new Project
			div
				.mdl-grid
					if (typeof(projects) !== 'undefined' && projects.length > 0)
						div.mdl-cell.mdl-cell--12-col
							table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp
								thead
									tr
										th.mdl-data-table__cell--non-numeric Title
										th.mdl-data-table__cell--non-numeric Description
										th.mdl-data-table__cell--non-numeric Professor
								tbody
									for project in projects
										tr(onclick='window.location.replace("#{rootURL}/project-allotment-prof-create/view/#{project._id}")')
											td.mdl-data-table__cell--non-numeric #{project.title}
											td.mdl-data-table__cell--non-numeric #{project.description}
											td.mdl-data-table__cell--non-numeric #{project.name}
					else
						div.mdl-cell.mdl-cell--12-col
							h5(style='text-align:center').center No Projects Added Yet.



