extends ../../../master-dashboard

block content
	style.
		td {
		cursor: pointer;
		}
	script(type='text/javascript').
		document.getElementsByClassName('mdl-navigation__link menuselectify')[0].classList.remove('menuselectify')
		document.getElementById('project-applications').classList.add('menuselectify')
	div.mdl-cell.mdl-cell--12-col.center
		h2 Project Allotment
		h4 Your Projects
		hr		
	div.mdl-cell.mdl-cell--12-col.center
		if projects.length !== 0
			br
			h7 Click to view applications
			br
			br
			center
				div.table-responsive
					table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp.center
						thead
							tr
								th.mdl-data-table__cell--non-numeric Title
								th.mdl-data-table__cell--non-numeric Description
								th.mdl-data-table__cell--non-numeric Type
						tbody
							for project in projects
								tr(onclick='window.location.replace("#{rootURL}/#{reqPortal}/project/#{project._id}")')
									td.mdl-data-table__cell--non-numeric #{project.title.substring(0,60)} ...
									td.mdl-data-table__cell--non-numeric #{project.description.substring(0,60)}
									td.mdl-data-table__cell--non-numeric #{project.type.toUpperCase()}
		else
			br
			h6 No Projects Found
