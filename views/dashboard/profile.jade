extends ../master-dashboard
block content
	div.mdl-cell.mdl-cell--12-col.center
		div.mdl-grid
			div.mdl-cell.mdl-cell--12-col.center
				img(src=profileImage alt=user.name href=rootURL + '/profile' onclick="window.location.replace('#{rootURL}/profile')" style="width: 64px;height: 64px;border-radius: 50%;display:inline;")
				h4 My Profile
				p Welcome, #{user.name}
				h3 View your courses in one place
				div.mdl-grid
					.mdl-cell.mdl-cell--12-col.center
						.mdl-tabs.mdl-js-tabs.mdl-js-ripple-effect
							.mdl-tabs__tab-bar
								a.mdl-tabs__tab.is-active(href='#test') My Courses
							#test.mdl-tabs__panel.is-active
								br
								center
									div.table-responsive
										table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp
											thead
												tr
													th.mdl-data-table__cell--non-numeric Course
													th.mdl-data-table__cell--non-numeric Sections					
											tbody
												for course in user.courses
														tr
															td.mdl-data-table__cell--non-numeric #{course.courseID}
															td.mdl-data-table__cell--non-numeric #{course.sections}
